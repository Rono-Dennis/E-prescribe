        <!--            android:textStyle="bold"-->
        <!--            android:layout_below="@+id/cart_product_quantity"-->
        <!--            android:gravity="center"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            />-->


        <ImageView
            android:layout_below="@id/cart_product_quantity"
            android:id="@+id/label_delete"
            android:layout_width="20dp"
            android:iconTint="@color/colorWhite"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_delete"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/show_all_orders"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Message user"
            android:textSize="5dp"
            android:textColor="@color/colorindigo"
            android:layout_below="@id/cart_product_price"/>
        <Button
            android:id="@+id/show_all_order"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Cancel Order"
            android:textSize="5dp"
            android:textColor="@color/colorindigo"
            android:layout_below="@id/cart_product_price"/>

        <Button
            android:id="@+id/show_all_payment"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Check payment"
            android:textSize="5dp"
            android:textColor="@color/colorindigo"
            android:layout_below="@id/cart_product_price"/>

