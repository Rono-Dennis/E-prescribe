<?xml version="1.0" encoding="utf-8"?>
     <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/e4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Drug Orders"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            /></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/e4"
        >

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="User Name"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"

            android:text="Phone number"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"

            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Total Price"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_below="@+id/order_phone_number"

            android:textStyle="bold"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Address, City"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_below="@+id/order_total_price"

            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/order_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Address, City"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_below="@+id/order_address"

            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Date Time"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_below="@+id/order_city"

            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Date Time"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_below="@+id/order_date"

            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />


        <Button
            android:id="@+id/show_all_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Show Drug Order"
            android:textSize="18dp"
            android:textColor="@color/colorindigo"
            android:layout_below="@id/order_time"/>


    </RelativeLayout>

</RelativeLayout>