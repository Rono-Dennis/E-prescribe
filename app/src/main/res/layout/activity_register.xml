    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="680dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_left_panel"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="100dp"
        android:background="@drawable/shape_register_panel"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"

        android:paddingRight="50dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_edit_text"
            android:gravity="center"
            android:hint="Username"
            android:id="@+id/fullname"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_edit_text"
            android:gravity="center"
            android:hint="Email"
            android:id="@+id/email"
            android:layout_below="@id/fullname"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />



        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_edit_text"
            android:gravity="center"
            android:hint=" phone"
            android:id="@+id/phone"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:layout_below="@id/email"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_edit_text"
            android:gravity="center"
            android:hint="Location"
            android:layout_marginTop="15dp"
            android:layout_below="@id/phone"
            android:id="@+id/Location"
            android:inputType="text"

            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_edit_text"
            android:gravity="center"
            android:hint="Address"
            android:layout_marginTop="15dp"
            android:layout_below="@id/Location"
            android:id="@+id/Address"
            android:inputType="text"

            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/Address"
            android:layout_width="match_parent"
            android:id="@+id/passlayout"

            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

        <EditText
            android:layout_width="match_parent"

            android:layout_height="40dp"
            android:background="@drawable/shape_edit_text"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/password"
            android:layout_marginTop="180dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="325dp"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:id="@+id/register"
            android:text="Register"

            android:textColorHint="@android:color/holo_purple"
            android:background="@drawable/shape_login_button"
            android:textColor="@android:color/background_light" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerInParent="true"
            android:visibility="gone"/>



    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:text="Do you have an account?"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="180dp"
        android:textColor="@color/colorAccent"
        android:text="SIGN UP"/></RelativeLayout></ScrollView>

</RelativeLayout>